%%SELECTOR%% {
  {% if content.layout.grid_template_columns %}
  grid-template-columns: {{ content.layout.grid_template_columns }};
  {% endif %}
  {% if content.layout.gap.style %}
  gap: {{ content.layout.gap.style }};
  {% endif %}
}
%%SELECTOR%% .ue-coupon-inp-field{
  {% if content.input_field.background %}
  background-color: {{ content.input_field.background }};
  {% endif %}
  {{ macros.borders(content.input_field.borders) }}
  {{ macros.typography(content.input_field.typography, globalSettings) }}
  {{ macros.spacing_padding_all(content.input_field.padding) }}
  {% if content.input_field.order %}
  order: {{ content.input_field.order }};
  {% endif %}
  {% if content.input_field.width.style %}
  width: {{ content.input_field.width.style }};
  {% endif %}
  {% if content.input_field.height.style %}
  height: {{ content.input_field.height.style }};
  {% endif %}
}
{% if content.input_field.placeholder %}
%%SELECTOR%% .ue-coupon-inp-field::placeholder {
  color: {{ content.input_field.placeholder }}
}
{% endif %}
%%SELECTOR%% .ue-coupon-inp-field:focus {
  {% if content.input_field.focus_background %}
  background-color: {{ content.input_field.focus_background }};
  {% endif %}
  {% if content.input_field.focus_color %}
  color: {{ content.input_field.focus_color }};
  {% endif %}
  {{ macros.borders(content.input_field.focus_borders) }}
}
